<div class="col col-6 mx-auto mt-4 text-dark">

      <h2>Editez le produit</h2>
      <!-- Zone du formulaire -->

      <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4", multipart: true do %>

     <b> <%= label_tag 'Nom' %></b>
      <%= text_field_tag 'title', @product.title, class: "form-control" %>
      <br />

      <b><%= label_tag 'Description' %></b>
      <%= text_field_tag 'description', @product.description, class: "form-control"  %>
      <br />

      <b><%= label_tag 'Prix' %></b>
      <%= text_field_tag 'price', @product.price, class: "form-control"  %>
      <br />

      <div class="form-group">
            <%= file_field_tag :picture, class: 'btn btn-warning btn-sm' %>
            </div>
            <div class="form-group"> 
      </div>
      <div class="form-group">
                
      <%=select_tag 'category_id', options_for_select(Category.all.collect{ |c| [c.title, c.id] }), class: "form-control"%>
      </div>


      <%= submit_tag "Editer", class: "btn btn-primary mb-3" %>

      <% end %>
</div>