<div class="text-dark">
  <h3 class="text-center mt-5 mb-4">Cr√©er nouveau produit</h3> 

  <!-- Zone du formulaire -->
  <%= form_tag url_for(action: 'create'), method: 'post', class: "col col-4 mx-auto" do %>

  <b><%= label_tag 'Titre' %></b>
  <%= text_field_tag 'title', @product.title, class: "form-control mb-3" %>


  <b><%= label_tag 'Description' %></b>
  <%= text_field_tag 'description', @product.description, class: "form-control mb-3" %>


  <b><%= label_tag 'Prix' %></b>
  <%= text_field_tag 'price', @product.price, class: "form-control mb-3"  %>
 

  <b><%= label_tag 'Image url' %></b>
  <%= text_field_tag 'image_url', @product.image_url, placeholder: "ex: https://my_image", class: "form-control"  %>
    
<%=select_tag 'category_id', options_for_select(Category.all.collect{ |c| [c.title, c.id] })%>
  <%= submit_tag "Create", class: "btn btn-primary col-12 mb-4 mt-3" %>

  <% end %>
</div>

<% if @product.errors.any? %>
<div class="alert alert-danger" role="alert">
 <p>The product can't be created for the reasons below:</p>
 <ul>
   <% @product.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
</div>
<% end %>