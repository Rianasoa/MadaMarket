
<div class="container-fluid">
	<div class="row">
		<!-- Dashboard Menu -->
		<nav class="col-md-2 d-none d-md-block bg-light sidebar">
			<div class="sidebar-sticky">
				<ul class="nav flex-column">
					<li class="nav-item">
						<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
							<span>Dashboard</span>
						</h6>
						<%=link_to "Acceuil", admin_products_path, class: "nav-link active" %>  
					</li>
					<li class="nav-item">
						<%=link_to "Produits", admin_products_path, class: "nav-link active" %> 
					</li>
					<li class="nav-item">
						<%=link_to "Utilisateurs", admin_users_path, class: "nav-link active" %> 
					</li>
				</ul>
			</div>
		</nav>

		<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
			<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
				<h2 class="text-center mt-4 mb-4"> Utilisateurs </h2><hr>
			</div>
			
		</main>

		<div>
			<%@products.each do |product|%>
				<%if product.provider == current_user%>
					<%product.cartProducts.each do |cartProduct|%>
						<%= cartProduct.cart.customer.first_name%><br>
						

					<%end%>
				<%end%>
			<%end%>
		</div>
	</div>
</div>