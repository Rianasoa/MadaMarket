<div class="container mt-cart">
	<table class="table table-responsive">
		<thead class="bg-dark text-light">
				<th style="width:75%">Votre panier</th>
				<th style="width:10%">Prix</th> 
				<th style="width:15%"></th> 
		</thead>
		<tbody>
			<tr>	
					<% @products.each do |product| %>	
				<td data-th="Votre panier">
					<div class="row">
						<div class="col-md-2">
							<img class="img-responsive" src="#" alt="#">
						</div>
						<div class="col-md-10">
							<h4 class="nomargin">Produit n°<%= product.id%></h4>
							<p><%= product.description%></p>
						</div>
					</div>
				</td>
				<td data-th="Price"><%= product.price%>€</td>
				<td class="actions" data-th="">
					<button class="btn btn-danger btn-sm">
						<i class="fa fa-trash-o"></i>
					</button>
				</td>
				<% end %>
		  </tr>
		</tbody>
		<tfoot class="card-footer">
			<tr>
				<td>
					<a class="btn btn-warning" href="#">Continuer l'achat</a>
				</td>
				<td class="hidden-xs">
					<strong>Total: <%= @total_price %>€</strong>
				</td>
				<td>
					<a class="btn btn-success btn-block" href="#">Checkout</a>
				</td>
			</tr>
		</tfoot>
	</table>
</div>