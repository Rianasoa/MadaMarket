<%= render 'layouts/nav'%>
  <div class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0">
            <a href="/" data-method="get">Accueil</a> <span class="mx-2 mb-0">/</span> 
            <strong class="text-black">Panier</strong>
          </div>
        </div>
      </div>
    </div>
<div class="site-section">
      <div class="container">
        <div class="row mb-5">
          <form class="col-md-12" method="post">
            <div class="site-blocks-table">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th class="product-thumbnail">Image</th>
                    <th class="product-name">Produit</th>
                    <th class="product-price">Prix unitaire</th>
                    <th class="product-quantity">Quantité</th>
                    <th class="product-total">Total</th>
                    <th class="product-remove">Retirer du panier</th>
                  </tr>
                </thead>
                <tbody>
                	<%@cart_products.each do |cart_product| %>
                  <tr>
                    <td class="product-thumbnail">
                    	 <%if cart_product.product.picture.attached?%>
                  		<%= image_tag cart_product.product.picture, alt: 'picture', class:"img-fluid" %>
                		<%else%>
                		<img class="img-fluid"  src="<%= cart_product.product.image_url %>" alt="Card image cap">
                		<%end%>
                    
                    </td>
                    <td class="product-name">
                      <h2 class="h5 text-black">
                      	<%= cart_product.product.title%> </h2>
                    </td>
                    <td><%=cart_product.product.price %>Ar</td>
                    <td>
                      <div class="input-group mb-3" style="max-width: 120px;">
                        <div class="input-group-prepend">
                        <%= cart_product.quantity %>
                      </div>
                    </td>
                    <td><%= cart_product.product.price * cart_product.quantity %>Ar</td>
                    <td><a href= "<%=cart_path(cart_product.product.id)%>" data-method='delete' class= "btn btn-warning height-auto btn-sm" data-confirm='Etes-vous sûre de vouloir supprimer?'>X</a></td>
                  </tr>
                     <%end%>
                </tbody>
              </table>
            </div>
          </form>
        </div>
    
        <div class="row">
          <div class="col-md-6">
            <div class="row mb-5">
              <div class="col-md-6">
                <a href="/" class="btn btn-outline-warning btn-md btn-block" data-method="get">Acheter d'autres produits</a>
              </div>
            </div>
          </div>
          <div class="col-md-6 pl-5">
            <div class="row justify-content-end">
              <div class="col-md-7">
                <div class="row">
                  <div class="col-md-12 text-right border-bottom mb-5">
                    <h3 class="text-black h4 text-uppercase">Commande Totale</h3>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <span class="text-black">Total prix</span>
                  </div>
                  <div class="col-md-6 text-right">
                    <strong class="text-black"><%= @price_total %>Ar</strong>
                  </div>
                </div>
                <div class="row mb-5">
                  <div class="col-md-6">
                    <span class="text-black">Total</span>
                  </div>
                  <div class="col-md-6 text-right">
                    <strong class="text-black"><%= @price_total  %>Ar</strong>
                  </div>
                </div>
    
                <div class="row">
                  <div class="col-md-12">
                    <%if @price_total!= 0%>
                    <a href="<%=new_charge_path%>" class="btn btn-warning btn-lg btn-block" data-method="get">Valider la commande</a>
                    <%else%>
                    <span class="btn btn-warning">Panier vide</span>
                    <%end%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
 <span id="contact">
       <%= render 'layouts/footer'%>     
</span>
