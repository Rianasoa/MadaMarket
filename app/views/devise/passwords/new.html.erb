</head>
<body>

    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <h2 class="form-title">Forgot your password?</h2>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <div class="form-group">    
                        	<%= f.text_field :first_name , autofocus: true, autocomplete: "first_name", class: 'form-control', :class=>"form-input", :placeholder=>"Nom" %>                      
                        </div>

                        <div class="form-group">
                              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control', :class=>"form-input",:placeholder=>"Email" %>          
                        </div>
						<div class="actions">		
		    			<%= f.submit "Reinitialiser mot de passe ", :class=>"submit text-uppercase" %><br><br>
		  					<center><%= render "devise/shared/links" %><br></center>
             
						<% end %>    
                </div>
            </div>
        </section>

    </div>

</body>
</html>









							