<!DOCTYPE html>
<html>
  <head>
     <title>signup</title>

     <style type="text/css">
     
     </style>
  </head>

  <body>
    <div class="container">
        <div class="row">

    <h5 class="card-title text-center">Sign up</h5>
           
      <div class="form-signin">
       <%= form_for(resource, as: resource_name, url:  registration_path(resource_name)) do |f|%>
          <%= render "devise/shared/error_messages", resource: resource %>

                 <div class="form-label-group">
                <%= f.text_field :last_name , autofocus: true, autocomplete: "last_name", :class=>'zone', :id=>"inputlastname", :class=>"form-control", :placeholder=>"Last name"%>
                <label for="inputlastname">Last name</label>
                </div>

           <div class="form-label-group">
                <%= f.text_field :first_name , autofocus: true, autocomplete: "first_name", :class=>'zone', :id=>"inputfirstname", :class=>"form-control", :placeholder=>"first name" %> 
                  <label for="inputfirstname">First name</label>
                </div>
            <div class="form-label-group">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", :class=>'zone', :id=>"inputaddress", :class=>"form-control", :placeholder=>"lot...ville" %> 
                <label for="inputaddress">Adresse</label>
              </div>

            <div class="form-label-group">
                 <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>'zone', :id=>"inputEmail", :class=>"form-control", :placeholder=>"exemple@gmail.com" %> 
                <label for="inputEmail">Email address</label>
              </div>

              
              <hr>
               <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <div class="form-label-group">
               <%= f.password_field :password, autocomplete: "new-password", :class=>'zone', :id=>"inputPassword", :class=>"form-control", :placeholder=>"Password" %> 
                <label for="inputPassword">Password</label>
              </div>
               <% end %><br/>
              
              <div class="form-label-group">
                 <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>'zone', :id=>"inputConfirmPassword", :class=>"form-control", :placeholder=>"Password" %> 
                <label for="inputConfirmPassword">Confirm password</label>
              </div>
            


              <%= f.submit "Sign up", :class=>"btn btn-lg btn-primary btn-block text-uppercase"%>
              
              <% end %><br>
              <div class="log">
                <%= render "devise/shared/links" %>
              </div>
          
      
          </div>
       </div>
  </body>
</html>