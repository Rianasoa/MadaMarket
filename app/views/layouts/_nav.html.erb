<div class="site-navbar py-2">

      <div class="search-wrap">
        <div class="container">
          <a href="#" class="search-close js-search-close"><span class="icon-close2"></span></a>
          <form action="#" method="post">
            <input type="text" class="form-control" placeholder="Search keyword and hit enter...">
          </form>
        </div>
      </div>

      <div class="container">
        <div class="d-flex align-items-center justify-content-between">
          <div class="logo">
            <div class="site-logo">
              <a href="/" class="js-logo-clone" data-method="get"> Madamarket</a>
            </div>
          </div>
          <div class="main-nav d-none d-lg-block">
            <nav class="site-navigation text-right text-md-center" role="navigation">
              <ul class="site-menu js-clone-nav d-none d-lg-block">
                <li class="active"><a href="/" data-method="get">Accueil</a></li>
                <li><a href="<%= accueil_index_path%>" data-method="get">Magasin</a></li>
                <li class="has-children">
                  <span class="dropdown-toggle"><a href="">Catégories</a></span>
                  <ul class="dropdown">
                    <%Category.all.each do |c|%>
                    <li><a href="<%= category_path(c.id)%>" data-method="get"><%= c.title%></a></li>
                    <%end%>
                  </ul>
                </li>
                <li><a href="#contact">Contact</a></li>
                                              
          <%if current_user%>
            <li class="has-children">
                 <span class="dropdown-toggle"><a href="">Profil</a></span>
              <ul class="dropdown">
                  <li><a href="<%= user_path(current_user.id)%>" data-method="get">Mon Profil</a></li>
                  <li><a href="<%= destroy_user_session_path%>" data-method="delete">Déconnexion</a></li>
              </ul>
            </li>
            <li><a href="<%= edit_user_path(current_user.id)%>">Devenir fournisseur</a></li>
          <%else%>
           <li class="has-children">
                <span class="dropdown-toggle"><a href="">Connexion</a></span>
              <ul class="dropdown">
                  <li><a href="<%= new_user_registration_path%>" data-method="get">S'inscrire</a></li>
                  <li><a href="<%= new_user_session_path%>" data-method="get">Se connecter</a></li>
              </ul>
            </li>
          <%end%>
        </ul>
      </nav>
    </div>
          <div class="icons">
            <%if current_user%>
            <a href="<%= cart_path(current_user.id)%>" class="icons-btn d-inline-block bag" data-method="get"> 
            <span class="fas fa-shopping-cart"></span>
              <span class="number"><%= Cart.find(current_user.cart.id).products.count%></span>
            </a>
            <%end%>
            <a href="" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none" data-method="get"><span class="fas fa-bars"></span></a>
          </div>
        </div>
      </div>
    </div>