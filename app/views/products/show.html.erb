<body>
  <div class="site-wrap">
    <%= render 'layouts/nav'%>
  <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 mr-auto">
            <div class="border text-center">
             <%if @product.picture.attached?%>
                  <%= image_tag @product.picture, alt: 'picture', class:"card-img-top", heigth: '300px' %>
                <%else%>
                <img class="card-img-top"  src="<%= @product.image_url %>" alt="Card image cap" heigth="300px" >
                <%end%>
            </div>
          </div>
          <div class="col-md-6">
            <h2 class="text-black"><%=@product.title %></h2>
            <p><%=@product.description %></p>
            <p> <strong class="text-warning h4"> <%=@product.price %>Ar</strong></p>                   
            <p><a href="<%= carts_path(@product.id)%>" class="buy-now btn btn-sm height-auto px-4 py-3 btn-warning" data-method="post">Ajouter au Panier</a></p>  
          </div>
        </div>
      </div>
    </div>
        <span id="contact">
       <%= render 'layouts/footer'%>
    </span>
</div>
</body>