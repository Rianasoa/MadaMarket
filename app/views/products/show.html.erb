<div class="col col-8 mx-auto text-dark">
	<h2 class="mt-3"><%= @product.title %></h2>

	<%if @product.picture.attached?%>
    	<%= image_tag @product.picture, alt: 'picture', class:"card-img-top"%>
    <%else%>
		<img class="card-img-top" height="200px" src="<%= @product.image_url %>" alt="Card image cap">
	<%end%>
	
	
	<ul class="list-group list-group-flush mb-3 mt-3">
		<li class="list-group-item"><%=@product.description %></li>
		<li class="list-group-item"><%=@product.price %> Ar</li>
		<li><a href="<%= cart_path(current_user.id)%>"><span class="panier" style="position: absolute; right: 2%; top: 5%;"><img src="https://cdn.pixabay.com/photo/2014/04/02/10/53/shopping-cart-304843_960_720.png" width="50px" height="50px" ></span></a></li>
	</ul>
</div>