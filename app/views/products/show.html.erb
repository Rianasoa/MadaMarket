<body>
	<div class="site-wrap">
		<%= render 'layouts/nav'%>
	<div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-5 mr-auto">
            <div class="border text-center">
             <%if @product.picture.attached?%>
                  <%= image_tag @product.picture, alt: 'picture', class:"card-img-top" %>
                <%else%>
                <img class="card-img-top"  src="<%= @product.image_url %>" alt="Card image cap">
                <%end%>
            </div>
          </div>
          <div class="col-md-6">
            <h2 class="text-black"><%=@product.title %></h2>
            <p><li> <%=@product.description %></li></p>
            

            <p> <strong> <%=@product.price %></strong></p>

            
            
       
            <p><a href="<%= carts_path(@product.id)%>" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" data-method="post">Ajouter au Panier</a></p>

          
    
          </div>
        </div>
      </div>
    </div>
      <%= render 'layouts/footer'%>
</div>
</body>

