<%= render 'layouts/super_admin_nav' %>
<div class="container">
	<h2>Listes des fournisseurs</h2>
	<table class="table table-bordered table-dark">
	  <thead>
	    <tr>
	      <th scope="col">Id</th>
	      <th scope="col">Prénom</th>
	      <th scope="col">Nom</th>
	      <th scope="col">Email</th>
	
	    </tr>
	  </thead>
	  <tbody>
	      <% @users.each do |user|%>
	    <tr>
	      <th scope="row"><%=user.id%></th>
	      <td><%=user.first_name%></td>
	      <td><%=user.last_name%></td>
	      <td><%=user.email%></td>
	    </tr>
	      <%end%>
	  </tbody>
</table>
</div>
<div class="container">
<table class="table table-bordered table-dark">
	<h2>Listes des fournisseurs en attente</h2>
	  <thead>
	    <tr>
	      <th scope="col">Id</th>
	      <th scope="col">Prénom</th>
	      <th scope="col">Nom</th>
	      <th scope="col">Email</th>
	      <th scope="col">Action</th>
	    </tr>
	  </thead>
	  <tbody>
	      <% @provider.each do |user|%>
	    <tr>
	      <th scope="row"><%=user.id%></th>
	      <td><%=user.first_name%></td>
	      <td><%=user.last_name%></td>
	      <td><%=user.email%></td>
	      <td><a href="/super_admin/users/<%=user.id%>" data-method="put" class="btn btn-success">Valider</a></td>
	    </tr>
	      <%end%>
	  </tbody>
</table>
</div>
