​
    <div class="container">
     
​<center><h2>Mon Profil</h2></center>
<hr>

      <div class="row flex-row">
            <div class="col-md-6" >
              <%if current_user.avatar.attached?%>
                <%= image_tag current_user.avatar, alt: 'avatar', class:"image" %>
                <%else%>
                <img class="card-img-top" src="https://cdn.pixabay.com/photo/2017/06/13/12/53/profile-2398782_960_720.png">
            
                <%end%><br>
                <%= form_tag user_avatars_path(current_user.id), multipart: true do %>
                <div class="form-group">
                <%= file_field_tag :avatar, class: 'btn  btn-sm' %>
                
                </div>
                <div class="form-group">
                <%= submit_tag "Update profil", class: 'btn btn-secondary btn-sm' %>
                </div>
              <%end%>
            </div>
              
​
              <div class="col-md-4">
                
                  
              <ul>
                <div class="field">
                   <h4><strong>First Name</strong>:</h4><%=current_user.first_name%>
                </div>
​
                <div class="field">
                   <h4><strong>Last name</strong>:</h4><%=current_user.last_name%>
                </div>
​
                <div class="field">
                    <h4><strong>Email</strong>:</h4><%=current_user.email%>
                </div>
​
              </ul>
                
                <br><%= link_to "Edit my informations", edit_user_path(current_user), :method => 'get', class: "btn btn-info"%>
